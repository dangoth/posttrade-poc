{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "Kafka": "localhost:9092",
    "DefaultConnection": "Server=localhost,1433;Database=PostTradeSystem;User Id=sa;Password=PostTrade123!;TrustServerCertificate=true"
  },
  "Kafka": {
    "BootstrapServers": "localhost:9092",
    "Topics": {
      "EquityTrades": "trades.equities",
      "OptionTrades": "trades.options", 
      "FxTrades": "trades.fx",
      "InstrumentReference": "reference.instruments",
      "TraderReference": "reference.traders"
    },
    "ExactlyOnce": {
      "EnableExactlyOnceSemantics": true,
      "TransactionTimeoutMs": 60000,
      "ProducerMaxInFlight": 1,
      "ConsumerSessionTimeoutMs": 30000,
      "ConsumerHeartbeatIntervalMs": 10000,
      "ConsumerMaxPollIntervalMs": 300000,
      "ConsumerGroupId": "posttrade-consumer-group",
      "EnableManualOffsetManagement": true,
      "EnableIdempotentProducer": true
    }
  },
  "Serilog": {
    "Using": ["Serilog.Sinks.Console"],
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      }
    ]
  }
}